{
  "name": "mypa-vscode",
  "displayName": "MyPA",
  "publisher": "local",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "main": "./out/extension.js",
  "categories": ["Programming Languages"],
  "activationEvents": [
    "onLanguage:mypa",
    "onCommand:mypa.showGoals"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mypa.showGoals",
        "title": "MyPA: Show Goals"
      }
    ],
    "languages": [
      {
        "id": "mypa",
        "aliases": ["MyPA"],
        "extensions": [".mypa"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -p . -w",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.0.0"
  }
}
